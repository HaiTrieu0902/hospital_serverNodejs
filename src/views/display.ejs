<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Displpay User</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

        <!-- jQuery library -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

        <!-- Popper JS -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td,
            th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>Display homie</h2>
                    <div>
                        <table>
                            <tr>
                                <th>Firts Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Male</th>
                                <th>Actions</th>
                            </tr>
                            <% for(var i=0; i < dataUser.length; i++) { %> <% if(dataUser[i].gender === 1) { %>
                            <tr>
                                <td><%= dataUser[i].firstName %></td>
                                <td><%= dataUser[i].lastName %></td>
                                <td><%= dataUser[i].email %></td>
                                <td><%= dataUser[i].phoneNumber %></td>
                                <td>male</td>
                                <td>
                                    <a href="/edit-crud?id=<%= dataUser[i].id %>" class="btn brn-primary" type="button"
                                        >Edit</a
                                    >
                                    <a class="btn brn-primary" type="button">Delete</a>
                                </td>
                            </tr>
                            <% } else { %>
                            <tr>
                                <td><%= dataUser[i].firstName %></td>
                                <td><%= dataUser[i].lastName %></td>
                                <td><%= dataUser[i].email %></td>
                                <td><%= dataUser[i].phoneNumber %></td>
                                <td>Female</td>
                                <td>
                                    <a href="/edit-crud?id=<%= dataUser[i].id %>" class="btn brn-primary" type="button"
                                        >Edit</a
                                    >
                                    <a
                                        href="/delete-crud?id=<%= dataUser[i].id %>"
                                        class="btn brn-primary"
                                        type="button"
                                        >Delete</a
                                    >
                                </td>
                            </tr>
                            <% } %> <% } %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
